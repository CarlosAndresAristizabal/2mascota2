<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/PerfilFragmentP"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/teal_200"
    tools:context=".Fragment.PerfilFragment">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/fondo2"
        >
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imgPerfil"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:src="@drawable/datos_de_perros"
        app:civ_border_color="#F4F4F6"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#000000"
        app:civ_shadow_radius="10dp"
        tools:ignore="MissingConstraints">

    </com.mikhaellopez.circularimageview.CircularImageView>

    <TextView
        android:id="@+id/NomPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:text="@string/selecciona_mascota_de_la_lista"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />
</LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/lineadivide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/imgtodo"
            android:src="@drawable/linea" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRatingFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>
    </LinearLayout>
</FrameLayout>